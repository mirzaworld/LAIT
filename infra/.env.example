# LAIT Environment Configuration
# Copy this file to backend/.env and customize for your environment

# Database Configuration
DATABASE_URL=postgresql://lait_user:lait_password@localhost:5432/lait_production
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=lait_production
POSTGRES_USER=lait_user
POSTGRES_PASSWORD=lait_password

# Redis Configuration
REDIS_URL=redis://:lait_redis_password@localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=lait_redis_password

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=lait_minio
MINIO_SECRET_KEY=lait_minio_password
MINIO_BUCKET=lait-invoices
MINIO_SECURE=false

# Application Configuration
FLASK_ENV=production
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-please
API_PORT=5003
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# AI/ML Configuration
AI_ANALYSIS_ENABLED=true
PDF_PROCESSING_ENABLED=true

# Celery Configuration
CELERY_BROKER_URL=redis://:lait_redis_password@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:lait_redis_password@localhost:6379/1
WORKER_CONCURRENCY=4
WORKER_LOGLEVEL=INFO

# Logging Configuration
LOG_LEVEL=INFO

# Security Configuration (Change these in production!)
SECRET_KEY=development-secret-key-change-in-production
